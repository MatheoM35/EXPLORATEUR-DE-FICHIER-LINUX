package com.esiea.pootd2.models;

public abstract class Inode {
    private String name;
    protected FolderInode parent;
    
    public Inode(String name)

    public String getName()

    public FolderInode getParent()

    public int getSize()

}

package com.esiea.pootd2.models;

public class FolderInode extends Inode {
    private int size;
    private ArrayList<Inode> children;

    public FolderInode(String name)

    public int getSize()

    public void setParent(Inode inode)

    public void addInode(Inode inode)

    public ArrayList<Inode> getChildren()

}


package com.esiea.pootd2.models;

public class FileInode extends Inode {

    private int size;

    public FileInode(String name) {
        super(name);
    }

    public int getSize()

}



